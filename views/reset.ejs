<%- include("./partials/header") %>

<div class="row">
    <h1 style="text-align: center">Reset your password</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/reset/<%= token %>" method="POST">
			<legend>Reset Password</legend>
            <div class="form-group">
				<label for='password'>New Password</label>
                <input class="form-control" type="password" name="password" value='' placeholder="new password" autofocus='autofocus'>
            </div>
            <div class="form-group">
				<label for='confirm'>Confirm Password</label>
				<input class="form-control" type="password" name="confirm" value='' placeholder="confirm password" autofocus='autofocus'>
            </div>
			 <div class="form-group">
				 <button class="btn btn-lg btn-primary btn-block">Update Password</button>
			</div>
        </form>
    </div>
</div>

<%- include("./partials/footer") %>